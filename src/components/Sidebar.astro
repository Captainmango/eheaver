---
import SocialButtons from "./SocialButtons.astro";
import { Icon } from "astro-icon/components";

const currentPage = Astro.url.pathname;

const navItems = [
    { href: "/about", label: "About", icon: "Info" },
    { href: "/blog", label: "Blog", icon: "Rss" },
];
---

<aside id="nav-container">
    <nav id="sidebar">
        <div>
            <div class="header">
                <img class="headshot" src="/static/profile.jpeg" />
            </div>
            <hgroup>
                <h3>Edward Heaver</h3>
                <p style="width: 20ch;">Building things and solving problems</p>
            </hgroup>
        </div>
        <ul>
            {navItems.map(item => (
                <li class={currentPage === item.href || currentPage.startsWith(item.href + "/") ? "active" : ""}>
                    <a href={item.href}>
                        {item.icon === "Info" && <Icon name="lucide:info" size="28" />}
                        {item.icon === "Rss" && <Icon name="lucide:rss" size="28" />}
                        <span>{item.label}</span>
                    </a>
                </li>
            ))}
        </ul>
        <div class="socials">
            <SocialButtons />
        </div>
    </nav>
</aside>

<style lang="scss">
    #nav-container {
        padding-left: var(--pico-spacing);
    }

    #sidebar {
        padding-top: var(--pico-spacing);
        box-sizing: border-box;
        height: 100vh;
        width: 280px;
        position: sticky;
        inset: 0 auto 0 0;
        align-self: start;
        display: flex;
        flex-flow: column;
        justify-content: start;

        & ul {
            list-style: none;
            display: flex;
            flex-flow: column;
            align-self: start;
            flex-wrap: nowrap;

            & a {
                color: var(--pico-dark);
                text-decoration: none;
            }

            & li {
                display: flex;
                align-items: center;
                width: 280px;

                & a {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                }

                svg {
                    padding-right: 8px;
                }

                & :hover {
                    color: var(--pico-primary);
                }
            }

            & li.active a {
                background-color: rgba($color: var(--pico-primary), $alpha: 5.0);
                color: var(--pico-color);
                font-weight: bold;
            }
        }

        & div:last-child {
            margin-top: auto;
        }
    }

    #header {
        display: flex;
        align-content: space-around;
    }

    .headshot {
        height: 11em;
        border-radius: 5%;
    }

    hgroup {
        padding-top: var(--pico-spacing);
    }

    .socials {
        padding-bottom: var(--pico-spacing);
    }
</style>

<script is:inline>
    function initNavigation() {
        const navLinks = document.querySelectorAll("#sidebar a");
        
        navLinks.forEach(link => {
            link.addEventListener("click", function(e) {
                document.querySelectorAll("#sidebar li").forEach(li => {
                    li.classList.remove("active");
                });
                
                this.parentElement.classList.add("active");
            });
        });
    }
    
    initNavigation();
    document.addEventListener("astro:page-load", initNavigation);
</script>
